# Server Configuration
SERVER_HOSTNAME=mail.yourdomain.com
SERVER_DOMAIN=yourdomain.com
SERVER_IP=0.0.0.0
SMTP_PORT=25
SMTP_TLS_PORT=587
SMTP_SSL_PORT=465
SUBMISSION_PORT=587

# Authentication
ENABLE_AUTH=true
AUTH_METHODS=PLAIN,LOGIN,CRAM-MD5

# TLS/SSL Configuration
TLS_CERT_PATH=/etc/ssl/certs/mail.crt
TLS_KEY_PATH=/etc/ssl/private/mail.key
TLS_CA_PATH=/etc/ssl/certs/ca-certificates.crt
ENABLE_STARTTLS=true
REQUIRE_TLS=false

# Database
DATABASE_URL=postgresql://smtpuser:smtppass@localhost:5432/smtp_server_db
REDIS_URL=redis://localhost:6379/0

# Queue Configuration
MAX_QUEUE_SIZE=10000
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=300
MESSAGE_RETENTION_DAYS=7

# Rate Limiting
MAX_RECIPIENTS_PER_MESSAGE=100
MAX_MESSAGES_PER_HOUR=1000
MAX_MESSAGES_PER_DAY=10000
MAX_CONNECTION_RATE=10
MAX_AUTH_ATTEMPTS=3

# DKIM Configuration
DKIM_PRIVATE_KEY_PATH=/etc/dkim/private.key
DKIM_SELECTOR=default
ENABLE_DKIM_SIGNING=true

# SPF Configuration
SPF_CHECKING=true
SPF_FAILURE_POLICY=softfail

# DMARC Configuration
DMARC_CHECKING=true
DMARC_FAILURE_POLICY=quarantine

# Delivery Settings
MAX_DELIVERY_THREADS=10
CONNECTION_TIMEOUT=30
DATA_TIMEOUT=300
DELIVERY_RETRY_INTERVAL=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/smtp-server/smtp.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Web Interface
WEB_INTERFACE_ENABLED=true
WEB_INTERFACE_PORT=8080
API_KEY=your-secure-api-key

# Spam Prevention
ENABLE_GREYLISTING=true
GREYLIST_DELAY_MINUTES=5
ENABLE_RATE_LIMITING=true
ENABLE_BLACKLIST_CHECK=true
BLACKLIST_SERVERS=zen.spamhaus.org,bl.spamcop.net

# Storage
MAIL_STORAGE_PATH=/var/mail/smtp-server
MAX_MESSAGE_SIZE=26214400  # 25MB

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# GeoIP Database (for IP reputation)
GEOIP_DATABASE_PATH=/usr/share/GeoIP/GeoLite2-City.mmdb